<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

    <RelativeLayout
        android:id="@+id/r22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradlist"
        >

        <ImageView
            android:id="@+id/check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/check1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp" />


        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/name"
            android:layout_width="141dp"
            android:layout_height="25dp"
            android:text="Reach 10km"
            android:textColor="#f4c842"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBaseline="@+id/likeView"
            android:layout_alignBottom="@+id/likeView"
            android:layout_toRightOf="@+id/check"
            android:layout_toEndOf="@+id/check" />

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_marginTop="30dp"
            style="@style/NumberProgressBar_Passing_Green"
            android:layout_below="@+id/name" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnReward"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/gift"


            android:textColor="#008000"
            android:textSize="11dp"
            android:layout_below="@+id/simpleProgressBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/publication"


            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Price : 2 Free Hours"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_below="@id/simpleProgressBar" />



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/likeView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:backgroundTint="#f5f5f5"

            android:drawableLeft="@drawable/racingflag"
            android:drawablePadding="5dp"
            android:text="Subscribe"
            android:textColor="#008000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

