<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    folding-cell:additionalFlipsCount="2"
    folding-cell:animationDuration="1300"
    folding-cell:backSideColor="@color/bgBackSideColor"
    folding-cell:cameraHeight="30">


    <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER than content layout above) -->
    <include layout="@layout/cell_title_layout" />
<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="100dp"
        android:layout_height="match_parent"
        >
    <ImageView
        android:src="@drawable/marker"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tvNbVelo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="2 BIKES"
        android:textStyle="bold"
        android:textColor="#ff9966"
        android:layout_width="200dp"
        android:layout_height="100dp" />
    </LinearLayout>
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tvId"
        android:layout_marginTop="30dp"
        android:text="station"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="100dp" />



</LinearLayout>
</com.ramotion.foldingcell.FoldingCell>