<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.bikeit.QrFragment"
    android:id="@+id/r1"
    android:background="@drawable/bggg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/scan_format"
        android:layout_marginEnd="-40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="-40dp"
        android:layout_toLeftOf="@+id/st"
        android:layout_toStartOf="@+id/st"
        android:text="scan qr code" />
    <Button

        android:id="@+id/scan_button"

        android:layout_width="130dp"

        android:layout_height="130dp"

        android:background="@drawable/co1"
        android:text=""
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView

        android:id="@+id/scan_format"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:textIsSelectable="true"

        android:layout_centerHorizontal="true"

        android:layout_below="@id/scan_button" />
    <TextView

        android:id="@+id/scan_content"
        android:text=""

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:textIsSelectable="true"

        android:layout_marginBottom="55dp"
        android:layout_above="@+id/scan_format"
        android:layout_centerHorizontal="true" />
<TextView
    android:text="Select Station : "
    android:textStyle="bold"
    android:textSize="50px"
    android:layout_width="180dp"
    android:layout_height="60dp"
    android:id="@+id/textView2"

    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/scan_format"
    android:layout_toStartOf="@+id/scan_format" />

    <Spinner
        android:id="@+id/st"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:theme="@style/MyButton"
        android:enabled="true"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/st"
        android:layout_alignEnd="@+id/st" />

</RelativeLayout>
